<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonOutlineStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ic_refresh</item>
        <item name="iconTint">@color/green_strong</item>
        <item name="android:textColor">@color/green_strong</item>
    </style>

    <style name="ButtonOutlineIcon" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonHolderForLabels" parent="@style/Widget.MaterialComponents.Button.TextButton">
    </style>

    <style name="ButtonOutlinePlusStyle" parent="ButtonOutlineIcon">
        <item name="iconTint">@color/green_strong</item>
    </style>

    <style name="ButtonOutlineMinusStyle" parent="ButtonOutlineIcon">
        <item name="iconTint">@color/primary_color_dark</item>
        <item name="icon">@drawable/ic_remove_purchase_item</item>
    </style>

    <style name="ButtonOutlineLabel" parent="ButtonOutlineIcon">
        <item name="android:textColor">?attr/ButtonTextColor</item>
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
    </style>
</resources>